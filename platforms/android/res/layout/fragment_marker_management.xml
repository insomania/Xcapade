    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/marker_edit_view"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@color/custom_pink">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/marker_id_text"
                android:layout_marginLeft="20dp"
                android:text="Scene 1"
                android:textSize="20dp"
                android:textStyle="bold|normal"
                android:textColor="@color/custom_white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="6dp"
            android:layout_marginRight="0dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/insert_model_button"
                android:alpha="0.95"
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/obj_plus"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="6dp"
            android:layout_marginRight="5dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/delete_model_button"
                android:alpha="0.95"
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/obj_minus"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="6dp">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/remove_marker_button"
                android:alpha="0.95"
                android:background="@null"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/scene_delete"/>
        </LinearLayout>

