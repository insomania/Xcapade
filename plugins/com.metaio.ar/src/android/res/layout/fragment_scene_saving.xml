<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="480dp"
              android:padding="@dimen/top_bar_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Scene Saving"
                android:textSize="32dp"
                android:textColor="@color/custom_white"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_weight="2"
            android:padding="8dp"
            android:weightSum="3.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Scene name: "
                android:textSize="18dp"
                android:textColor="@color/custom_white"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@color/custom_white"
                android:id="@+id/edit_scene_name"
                android:textSize="18dp"
                android:textStyle="italic"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:padding="8dp"
            android:weightSum="5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Description: "
                android:textSize="18dp"
                android:textColor="@color/custom_white"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:background="@color/custom_white"
                android:id="@+id/edit_scene_descr"
                android:textSize="18dp"
                android:textStyle="italic"
                android:inputType="textMultiLine"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:padding="8dp"
            android:weightSum="3.5"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:text="Hint: "
                android:textSize="18dp"
                android:textColor="@color/custom_white"
                android:textStyle="bold"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="@color/custom_white"
                android:id="@+id/edit_scene_hint"
                android:textSize="18dp"
                android:textStyle="italic"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="8dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:id="@+id/cancel_scene_saving"
                android:text="Cancel"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:background="@color/custom_white"
                />

            <View android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:id="@+id/confirm_scene_saving"
                android:text="Save"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:background="@color/custom_white"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>